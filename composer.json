{
	"authors": [
          {
                "name": "Gary Rancier",
                "email": "lodyssee@gmail.com",
                "role": "Developer"
          }
	],
	"name": "cupboard/cupboard",
	"description": "A minimal blogging application.",
	"keywords": ["blog", "cms", "laravel", "cupboard"],
	"license": "MIT",
	"type": "project",
	"require": {
		"php": ">=5.4.0",
		"laravel/framework": "4.2.*",
                "cupboard/core": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"app/commands",
                        "app/config/ConfigWriter.php",
                        "app/controllers",
                        "app/models",
                        "app/database/migrations",
                        "app/database/seeds",
                        "app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
                        "php artisan asset:publish cupboard/core"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate",
                        "php artisan asset:publish cupboard/core",
                        "php artisan cupboard:themes"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
